<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IllnessTracker.ViewModels"
        x:Class="IllnessTracker.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="УЧЕТ БОЛЕЗНЕЙ" Width="900" Height="550"
        Background="White" Foreground="Black">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto, *, Auto" Margin="20">
        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,10">
            <TextBlock Grid.Column="0" Text="{Binding Status}" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Grid.Column="1" Content="[-] УДАЛИТЬ ВЫБРАННОЕ" Command="{Binding DeleteSelected}"/>
        </Grid>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Records}" SelectedItem="{Binding SelectedRecord}"
                  AutoGenerateColumns="False" IsReadOnly="True" GridLinesVisibility="All" BorderBrush="Black" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="СОТРУДНИК" Binding="{Binding EmployeeName}" Width="2*"/>
                <DataGridTextColumn Header="ОТДЕЛ" Binding="{Binding DepartmentName}" Width="*"/>
                <DataGridTextColumn Header="БОЛЕЗНЬ" Binding="{Binding IllnessType}" Width="*"/>
                <DataGridTextColumn Header="ДНЕЙ" Binding="{Binding DurationDays}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,10,0,0">
            <Button Content="&lt;" Command="{Binding Prev}"/>
            <TextBlock Text="{Binding PageInfo}" VerticalAlignment="Center" FontWeight="Bold"/>
            <Button Content="&gt;" Command="{Binding Next}"/>
            <Button Content="ОБНОВИТЬ" Command="{Binding Refresh}" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>